@{
    ViewBag.Title = "CRM Outbound Contact Center";
}

<!-- Include Page Head -->
@RenderPage("~/Views/Gates/Head.cshtml")

<body class="simple-page">
    <div class="simple-page-wrap">
        <div class="simple-page-logo animated swing">
            <a>
                <span><i class="fa fa-gg"></i></span>
                <span>Forgot Your Password ?</span>
            </a>
        </div><!-- logo -->
        <div class="simple-page-form animated flipInY" id="login-form">
            <form action="">
                <br>
                <div class="form-group has-info">
                    <label class="control-label" for="inputSmall">Email</label>
                    <input type="email" id="sign-in-email" class="form-control input-sm" id="inputSmall" placeholder="entry your email recovery">
                </div>
                <button type="submit" class="btn btn-primary btn-raised">Recover my password</button>
            </form>
        </div><!-- #login-form -->

    </div><!-- .simple-page-wrap -->
    <!-- Include Page Foot -->
    @RenderPage("~/Views/Gates/Foot.cshtml")

</body>